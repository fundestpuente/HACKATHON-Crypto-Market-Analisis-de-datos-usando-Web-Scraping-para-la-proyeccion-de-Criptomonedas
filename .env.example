# Networking
API_HOST=0.0.0.0
API_PORT=8000

# Ingestion
REQUEST_TIMEOUT_SECONDS=10
TOP_N_ASSETS=25

# Storage
DATA_DIR=./data
PARQUET_FILENAME=market_snapshots.parquet

# Dashboard
API_BASE_URL=http://localhost:8000

# Optional: restrict symbols (comma-separated). Example keeps main caps only.
SYMBOL_ALLOWLIST=BTC,DOGE,ETH

# Optional: continuous ingestion loop (seconds between runs)
INGEST_INTERVAL_SECONDS=300

# Prediction loop (periodic train/predict)
PREDICT_SYMBOLS=BTC,DOGE
PREDICT_INTERVAL_SECONDS=600
PREDICT_STEP_MINUTES=5
PREDICT_EPOCHS=30
PREDICT_BLEND_ALPHA=0.35
PREDICT_RETURN_CLIP_MULT=3.0
PREDICT_MIN_RETURN_CLIP=0.001

# Sentiment loop (CoinDesk headlines)
SENTIMENT_INTERVAL_SECONDS=900
SENTIMENT_HEADLINES_LIMIT=30
